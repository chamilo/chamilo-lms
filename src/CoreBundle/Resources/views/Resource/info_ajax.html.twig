{% block content %}
{#    deprecated#}
    {% autoescape false %}
        <div id="app">
            <resource :id="{{ resource.resourceNode.id }}"></resource>
        </div>

        <script>
            $(function () {
                $('#close_info_bar').on('click', function () {
                    $('#resources').attr('class', 'col-lg-12');
                    $('#info_bar').attr('class', 'col-md-auto');
                    $('#info_bar').html('');
                    $('#info_bar').hide();
                });
            });
        </script>
        <div class="card">
            <div class="card-header">
                <a id="close_info_bar" href="#" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
            </div>
            {% if resource.resourceNode.isResourceFileAnImage %}
                <img
                    src="{{ url('chamilo_core_resource_view', {
                        'id': resource.resourceNode.id,
                        'cid': course ? course.id : 0,
                        'sid': session ? session.id : 0,
                        'type' : type,
                        'tool' : tool
                    })
                    }}"
                    style = "max-width: 18rem;"
                    class = "card-img-top"
                />
            {% endif %}

{#            {% if illustration %}#}
{#                <img src="{{ illustration }}" />#}
{#            {% endif %}#}

            <div class="card-body">
                <h4 class="card-title">{{ resource }}</h4>
                <ul class="nav nav-tabs card-header-tabs"  id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="details-tab" data-toggle="tab" href="#details" role="tab" aria-controls="details" aria-selected="true" >Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="activity-tab" data-toggle="tab" href="#activity" role="tab" aria-controls="activity" aria-selected="true" >Activity</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="sharing-tab" data-toggle="tab" href="#sharing" role="tab" aria-controls="sharing" aria-selected="true" >Activity</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="comments-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="comments" aria-selected="true" >Comments</a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                        {% include '@ChamiloCore/Resource/info_details.html.twig' %}
                    </div>
                    <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">
                        {% include '@ChamiloCore/Resource/info_activity.html.twig' %}
                    </div>
                    <div class="tab-sharing fade" id="sharing" role="tabpanel" aria-labelledby="sharing-tab">
                        {% include '@ChamiloCore/Resource/info_sharing.html.twig' %}
                    </div>
{#                    <div class="tab-pane fade" id="comments" role="tabpanel" aria-labelledby="comments-tab">#}
{#                        {% include '@ChamiloCore/Resource/info_comments.html.twig' %}#}
{#                    </div>#}
                </div>
            <div/>
        <div/>
    {% endautoescape %}
{% endblock %}
