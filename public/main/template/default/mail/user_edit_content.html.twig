<p>{{ 'Dear'|trans }} {{ complete_name }},</p>
<p>{{ 'You are registered to'|trans }} {{ _s.site_name }} {{ 'with the following settings:'|trans }}</p>
<p>{{ 'Username'|trans }} : {{ login_name }}<br>
{% if original_password != '' %}
{{ 'Password'|trans }} : {{ original_password }}</p>
{% endif %}
<p>{{ 'Address'|trans }} {{ _s.site_name }} {{ 'is'|trans }} : {{ portal_url }}</p>
<p>{{ 'In case of trouble, contact us.'|trans }}</p>
<p>{{ 'Sincerely'|trans }}</p>
<p>{{ _admin.name }}, {{ _admin.surname }}<br>
    {{ 'Administrator'|trans }} {{ _s.site_name }}<br>
    {{ _admin.telephone ? 'T. ' ~ _admin.telephone }}<br>
    {{ _admin.email ? 'Email'|trans ~ ': ' ~ _admin.email }}</p>