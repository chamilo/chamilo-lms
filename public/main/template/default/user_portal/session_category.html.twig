<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2">
                {% if session_category.show_actions %}
                    <a href="{{ url('legacy_main', { 'name' : 'session/session_category_edit.php', 'id' : session_category.id }) }}"
                       class="thumbnail">
                        {{ 'ObjectIcon::SESSION'|mdi_icon(48, 'ch-tool-icon', session_category.title) }}
                    </a>
                {% else %}
                    {{ 'ObjectIcon::SESSION'|mdi_icon(48, 'ch-tool-icon', session_category.title) }}
                {% endif %}
            </div>
            <div class="col-md-10">
                {% if session_category.show_actions %}
                    <div class="pull-right">
                        <a href="{{ url('legacy_main', { 'name' : 'session/session_category_edit.php', 'id' : session_category.id }) }}">
                            {{ 'ActionIcon::EDIT'|mdi_icon_t(22, 'ch-tool-icon', 'Edit') }}
                        </a>
                    </div>
                {% endif %}
                <h4 class="title">{{ session_category.title }}</h4>
                {% if session_category.subtitle %}
                    <div class="subtitle-session">{{ session_category.subtitle }}</div>
                {% endif %}
            </div>
        </div>
        {# session_category.sessions is generated with the session.tpl #}
        {{ session_category.sessions }}
    </div>
</div>
