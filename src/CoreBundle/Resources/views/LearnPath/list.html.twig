{% block content %}
{% autoescape false %}
    <script>
        function confirmation(name) {
            if (confirm("{{ "Are you sure to delete"|trans }} \"" + name + "\" ?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>
    {% set configuration = 1 %}
