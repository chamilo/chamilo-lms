{%
    extends hide_header == true
    ? '@ChamiloCore/Layout/blank.html.twig'
    : '@ChamiloCore/Layout/layout_one_col.html.twig'
%}

{% block content %}
    {% set isPostRegistration = text_after_registration is not empty %}

    <div class="min-h-screen flex justify-center bg-gray-100 p-4 {{ isPostRegistration ? 'items-start pt-10' : 'items-center' }}">
        <div class="w-full max-w-screen-lg bg-white rounded-2xl shadow-lg p-8">

            {# header if present #}
            {% if inscription_header %}
                <div class="mb-6">
                    {{ inscription_header|raw }}
                </div>
            {% endif %}

            {# post-registration message should be visible at the top #}
            {% if text_after_registration %}
                <div class="mb-6 text-gray-700">
                    {{ text_after_registration|raw }}
                </div>
            {% endif %}

            {# intro text or notices #}
            {% if inscription_content %}
                <div class="mb-6 text-gray-700">
                    {{ inscription_content|raw }}
                </div>
            {% endif %}

            {# registration form takes full width (only if present) #}
            {% if form %}
                <div class="w-full">
                    {{ form|raw }}
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
