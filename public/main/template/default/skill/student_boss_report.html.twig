{% autoescape false %}
    {% if allow_skill_tool %}
        <div class="btn-group">
            <a class="btn btn--plain" href="{{ _p.web_main }}social/skills_wheel.php">
                {{ 'Skills wheel'|trans }}
            </a>
        </div>
    {% endif %}

    <h1 class="page-header">{{ 'Skills acquired'|trans }}</h1>

    <form class="form--inline" method="post" action="{{ _p.web_self }}">
        <label>{{ 'Students'|trans }}</label>
        <select name="student" id="student">
            <option value="0">{{ 'Select'|trans }}</option>
            {% for student in followed_students %}
                <option value="{{ student.user_id }}" {{ (student.user_id == selected_student) ? 'selected' : '' }}>
                    {{ student.completeName }}
                </option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn--primary">{{ 'Search'|trans }}</button>
    </form>

    {% if rows %}
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Student'|trans }}</th>
                <th>{{ 'Skills acquired'|trans }}</th>
                <th>{{ 'Date'|trans }}</th>
                <th>{{ 'Course'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for row in rows %}
                <tr>
                    <td>{{ row.complete_name }}</td>
                    <td>{{ row.skill_name }}</td>
                    <td>{{ row.achieved_at }}</td>
                    <td>
                        <img src="{{ row.course_image }}" alt="{{ row.course_name }}">
                        {{ row.course_name }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endautoescape %}
