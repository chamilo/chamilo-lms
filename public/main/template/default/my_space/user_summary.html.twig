{% block content %}
    {% autoescape false %}

        <script>
          $(function () {
            $('[data-toggle="tooltip"]').tooltip();
          });
        </script>

        <div class="summary-legend mb-4">
            <div class="rounded-xl border border-gray-200 bg-white shadow-sm px-4 py-3">
                <h3 class="text-xs font-semibold uppercase tracking-wide text-gray-500 mb-2">
                    {{ 'Legend'|get_lang }}
                </h3>

                <ul class="list-legend grid gap-2 sm:grid-cols-2 lg:grid-cols-4 text-xs md:text-sm text-gray-700">
                    <li class="flex items-center gap-2">
                        <span class="cube student-progress inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Progress'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube student-score inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Average score in learning paths'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube student-message inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Total number of messages'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube student-assignments inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Total number of assignments'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube student-exercises inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Total score obtained for tests'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube questions-answered inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Number of tests answered'|get_lang }}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <span class="cube last-connection inline-block h-3 w-3 rounded-sm"></span>
                        <span>{{ 'Latest login'|get_lang }}</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-4">
            {{ table|replace({'class=\"data_table\"':'class=\"data_table w-full\"'}) }}
        </div>

    {% endautoescape %}
{% endblock %}
