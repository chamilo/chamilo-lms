{% extends "@ChamiloCore/Layout/layout_one_col.html.twig" %}

{% block content %}
    {% autoescape false %}

        <div class="w-full max-w-none px-4 lg:px-6 py-4">

            {# Filter card #}
            <div class="mb-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-20 p-4 md:p-5">
                <div class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-6 items-start">
                    {# Left title #}
                    <div class="md:col-span-4 lg:col-span-3">
                        <div class="text-body-2 font-semibold text-gray-90">
                            {{ 'Filter'|get_lang }}
                        </div>
                        <div class="text-tiny text-gray-50 mt-1">
                            {{ 'Career'|get_lang }}
                        </div>
                    </div>

                    {# Right form #}
                    <div class="md:col-span-8 lg:col-span-9">
                        <div class="w-full max-w-xl">
                            {{ form_filter }}
                        </div>
                    </div>
                </div>
            </div>


            {# Careers list #}
            {% if data is empty %}
                <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-20 p-6">
                    <div class="text-body-1 font-semibold text-gray-90">
                        {{ 'No results found'|get_lang }}
                    </div>
                </div>
            {% else %}
                <div class="grid grid-cols-1 gap-4 lg:gap-6">

                    {% for item in data %}
                        <div id="career-{{ item.id }}"
                             class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-20 p-4 md:p-6">

                            {# Header #}
                            <div class="flex flex-col gap-3 md:flex-row md:items-start md:justify-between">
                                <div class="min-w-0">
                                    <div class="text-lg font-semibold text-gray-90 truncate">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a class="text-primary hover:underline"
                                               href="/main/admin/careers.php?{{ { 'action' : 'edit', 'id' : item.id }|url_encode }}">
                                                {{ item.title }}
                                            </a>
                                        {% else %}
                                            {{ item.title }}
                                        {% endif %}
                                    </div>

                                    {% if item.description is not empty %}
                                        <div class="mt-1 text-body-2 text-gray-50">
                                            {{ item.description }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="flex items-center gap-2">
                                    <span class="inline-flex items-center rounded-full bg-support-1 px-3 py-1 text-tiny font-semibold text-support-4">
                                        {{ 'Promotions'|get_lang }}
                                    </span>
                                </div>
                            </div>

                            {# Promotions #}
                            <div class="mt-4">
                                <div class="overflow-x-auto">
                                    <table class="w-full min-w-full table-auto">
                                        <thead class="bg-gray-15 text-tiny uppercase tracking-wide text-gray-50">
                                        <tr class="border-b border-gray-20">
                                            <th class="px-3 py-2 font-semibold text-left">
                                                {{ 'Promotions' | get_lang }}
                                            </th>
                                            <th class="px-3 py-2 font-semibold text-left whitespace-nowrap">
                                                {{ 'Semester' | get_lang }}
                                            </th>
                                            <th class="px-3 py-2 font-semibold text-left whitespace-nowrap">
                                                {{ 'Courses' | get_lang }}
                                            </th>
                                        </tr>
                                        </thead>

                                        <tbody class="divide-y divide-gray-20">

                                        {% for promotions in item.career %}
                                            {% for prom in promotions %}
                                                {% set line = prom.sessions|length + 1 %}

                                                <tr class="hover:bg-gray-10">
                                                    <td class="px-3 py-3 align-top" rowspan="{{ line }}">
                                                        <div id="promotion-id-{{ prom.id }}" class="min-w-[220px]">
                                                            <a class="font-semibold text-gray-90 hover:text-primary hover:underline"
                                                               title="{{ prom.title }}"
                                                               href="/main/admin/promotions.php?{{ { 'action' : 'edit', 'id' : prom.id }|url_encode }}">
                                                                {{ prom.title }}
                                                            </a>

                                                            <div class="mt-2">
                                                                    <span class="inline-flex items-center rounded-full bg-gray-15 px-2.5 py-1 text-tiny font-semibold text-gray-90">
                                                                        {{ 'Sessions'|get_lang }}: {{ prom.sessions|length }}
                                                                    </span>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    {% if line == 1 %}
                                                        <td class="px-3 py-3 text-gray-50">&nbsp;</td>
                                                        <td class="px-3 py-3 text-gray-50">&nbsp;</td>
                                                    {% endif %}
                                                </tr>

                                                {% for session in prom.sessions %}
                                                    {% set sessionid = session.data.id %}

                                                    <tr class="hover:bg-gray-10">
                                                        <td class="px-3 py-3 align-top">
                                                            <div id="session-id-{{ sessionid }}" class="min-w-[220px]">
                                                                <a class="font-medium text-gray-90 hover:text-primary hover:underline"
                                                                   title="{{ session.data.title }}"
                                                                   href="{{ url('index') }}main/session/resume_session.php?id_session={{ sessionid }}">
                                                                    {{ session.data.title }}
                                                                </a>
                                                            </div>
                                                        </td>

                                                        <td class="px-3 py-3 align-top">
                                                            {% if session.courses is empty %}
                                                                <span class="text-body-2 text-gray-50">
                                                                        {{ 'No courses'|get_lang }}
                                                                    </span>
                                                            {% else %}
                                                                <ul class="space-y-1">
                                                                    {% for course in session.courses %}
                                                                        <li class="flex items-start gap-2">
                                                                            <span class="mt-1 inline-block h-1.5 w-1.5 rounded-full bg-gray-50"></span>
                                                                            <a class="text-body-2 text-gray-90 hover:text-primary hover:underline"
                                                                               href="{{ url('index') }}course/{{ course.id }}/home?sid={{ sessionid }}"
                                                                               title="{{ course.title }}">
                                                                                {{ course.title }}
                                                                            </a>
                                                                        </li>
                                                                    {% endfor %}
                                                                </ul>
                                                            {% endif %}
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                            {% endfor %}
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    {% endfor %}

                </div>
            {% endif %}
        </div>

    {% endautoescape %}
{% endblock %}
