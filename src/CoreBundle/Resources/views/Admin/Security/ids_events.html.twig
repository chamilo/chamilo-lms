{% extends "@ChamiloCore/Layout/layout_one_col.html.twig" %}

{% block content %}
    <div class="files-info-page">
        <h1>{{ 'Simple IDS'|trans }}</h1>

        {% if not idsEnabled %}
            <div class="alert alert-warning" style="margin-bottom:16px;padding:12px 16px;background:#fef9c3;border:1px solid #fde047;border-radius:6px;color:#713f12;">
                {{ 'IDS is currently disabled. Set IDS_ENABLED=true in your .env to activate scanning.'|trans }}
            </div>
        {% endif %}

        {# ------------------------------------------------------------------ #}
        {# Filter form                                                         #}
        {# ------------------------------------------------------------------ #}
        <form method="get" action="{{ path('admin_security_simple_ids') }}"
              style="display:flex;flex-wrap:wrap;gap:10px;justify-content:flex-end;margin-bottom:20px;">
            <input type="text"
                   name="ip"
                   value="{{ filters.ip }}"
                   placeholder="IP"
                   class="form-control"
                   style="max-width:160px;">
            <select name="type" class="form-control" style="max-width:180px;">
                <option value="">{{ 'All event types'|trans }}</option>
                {% for t in knownTypes %}
                    <option value="{{ t }}" {{ filters.type == t ? 'selected' : '' }}>{{ t }}</option>
                {% endfor %}
            </select>
            <input type="date" name="from" value="{{ filters.from }}" class="form-control">
            <input type="date" name="to"   value="{{ filters.to }}"   class="form-control">
            <button type="submit" class="btn btn--primary">{{ 'Search'|trans }}</button>
            {% if filters.ip or filters.type or filters.from or filters.to %}
                <a href="{{ path('admin_security_simple_ids') }}" class="btn btn--plain">{{ 'Reset'|trans }}</a>
            {% endif %}
        </form>

        {# ------------------------------------------------------------------ #}
        {# Charts                                                              #}
        {# ------------------------------------------------------------------ #}
        <div class="grid" style="display:grid;grid-template-columns:repeat(3,1fr);gap:16px;margin-bottom:20px;">
            <div class="card">
                <h3 style="margin:0 0 8px 0">{{ 'Events by day (last 7 days)'|trans }}</h3>
                <canvas id="chartByDay" height="140"></canvas>
            </div>
            <div class="card">
                <h3 style="margin:0 0 8px 0">{{ 'Events by type (last 30 days)'|trans }}</h3>
                <canvas id="chartByType" height="140"></canvas>
            </div>
            <div class="card">
                <h3 style="margin:0 0 8px 0">{{ 'Top attacking IPs (last 30 days)'|trans }}</h3>
                <canvas id="chartTopIps" height="140"></canvas>
            </div>
        </div>

        {# ------------------------------------------------------------------ #}
        {# Events table                                                        #}
        {# ------------------------------------------------------------------ #}
        <h2 style="margin:16px 0">{{ 'Flagged IDS events'|trans }}</h2>

        {% if items is empty %}
            <p>{{ 'No suspicious events detected.'|trans }}</p>
        {% else %}
            <table class="data_table">
                <thead>
                <tr>
                    <th>{{ 'Date'|trans }}</th>
                    <th>IP</th>
                    <th>{{ 'Detection type'|trans }}</th>
                    <th>{{ 'Parameter'|trans }}</th>
                    <th>{{ 'URI'|trans }}</th>
                    <th>{{ 'Detail'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for row in items %}
                    <tr>
                        <td style="white-space:nowrap">{{ row.date }}</td>
                        <td>
                            <a href="{{ path('admin_security_simple_ids', filters|merge({'ip': row.ip, 'page': 1})) }}">
                                {{ row.ip }}
                            </a>
                        </td>
                        <td>
                            <span class="ids-badge ids-badge--{{ row.type|lower }}">{{ row.type }}</span>
                        </td>
                        <td>{{ row.param }}</td>
                        <td style="max-width:260px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap"
                            title="{{ row.uri }}">{{ row.uri }}</td>
                        <td style="max-width:320px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap"
                            title="{{ row.detail }}">{{ row.detail }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {# Pagination #}
            {% set totalPages = (total / pageSize)|round(0, 'ceil') %}
            <div class="pagination">
                {% if page > 1 %}
                    <a href="{{ path('admin_security_simple_ids', filters|merge({'page': page - 1, 'pageSize': pageSize})) }}">&laquo; {{ 'Previous'|trans }}</a>
                {% endif %}
                {% for i in max(1, page - 2)..min(totalPages, page + 2) %}
                    {% if i == page %}
                        <span>{{ i }}</span>
                    {% else %}
                        <a href="{{ path('admin_security_simple_ids', filters|merge({'page': i, 'pageSize': pageSize})) }}">{{ i }}</a>
                    {% endif %}
                {% endfor %}
                {% if page < totalPages %}
                    <a href="{{ path('admin_security_simple_ids', filters|merge({'page': page + 1, 'pageSize': pageSize})) }}">{{ 'Next'|trans }} &raquo;</a>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {# ------------------------------------------------------------------ #}
    {# Badge styles                                                        #}
    {# ------------------------------------------------------------------ #}
    <style>
        .ids-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.78em;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: .03em;
            white-space: nowrap;
        }
        .ids-badge--sqli          { background: #fee2e2; color: #991b1b; }
        .ids-badge--xss           { background: #ffedd5; color: #9a3412; }
        .ids-badge--pathtraversal { background: #ede9fe; color: #5b21b6; }
        .ids-badge--cmdinjection  { background: #fce7f3; color: #9d174d; }
        .ids-badge--scanner       { background: #dbeafe; color: #1e40af; }
    </style>

    {# ------------------------------------------------------------------ #}
    {# Charts (Chart.js)                                                   #}
    {# ------------------------------------------------------------------ #}
    <script src="{{ asset('build/libs/chartjs/chart.umd.min.js') }}"></script>
    <script>
      (function () {
        const TYPE_COLORS = {
          SQLI:          '#fca5a5',
          XSS:           '#fdba74',
          PATHTRAVERSAL: '#c4b5fd',
          CMDINJECTION:  '#f9a8d4',
          SCANNER:       '#93c5fd',
        };
        const DEFAULT_COLOR = '#94a3b8';

        function colorFor(label) {
          return TYPE_COLORS[String(label).toUpperCase()] || DEFAULT_COLOR;
        }

        /* ---- Events by day ---- */
        const byDayRaw = {{ stats.byDay|json_encode|raw }};
        new Chart(document.getElementById('chartByDay'), {
          type: 'bar',
          data: {
            labels: Object.keys(byDayRaw),
            datasets: [{
              label: '{{ "Events"|trans }}',
              data: Object.values(byDayRaw),
              backgroundColor: '#93c5fd',
            }],
          },
          options: { scales: { y: { beginAtZero: true, ticks: { precision: 0 } } } },
        });

        /* ---- Events by type ---- */
        const byTypeRaw = {{ stats.byType|json_encode|raw }};
        const typeLabels = Object.keys(byTypeRaw);
        new Chart(document.getElementById('chartByType'), {
          type: 'doughnut',
          data: {
            labels: typeLabels,
            datasets: [{
              data: Object.values(byTypeRaw),
              backgroundColor: typeLabels.map(colorFor),
            }],
          },
          options: { maintainAspectRatio: false, plugins: { legend: { position: 'right' } } },
        });

        /* ---- Top IPs ---- */
        const topIps = {{ stats.topIps|json_encode|raw }};
        new Chart(document.getElementById('chartTopIps'), {
          type: 'bar',
          data: {
            labels: topIps.map(r => r.ip),
            datasets: [{
              label: '{{ "Events"|trans }}',
              data: topIps.map(r => r.count),
              backgroundColor: '#fca5a5',
            }],
          },
          options: { scales: { y: { beginAtZero: true, ticks: { precision: 0 } } } },
        });
      })();
    </script>
{% endblock %}
